{
   "name": "dtz",
   "version": "0.0.1",
   "main": "lib/index.js",
   "bin": "bin/cli.js",
   "description":
      "zip up a directory manipulated by cli/promise (and callback)",
   "license": "MIT",
   "repository": "kthjm/dtz",
   "author": "kthjm <toxictoxer@gmail.com>",
   "keywords": ["zip", "dir", "folder"],
   "prettier": {
      "tabWidth": 3,
      "semi": false,
      "singleQuote": true
   },
   "babel": {
      "presets": [
         [
            "env",
            {
               "targets": {
                  "node": "6"
               }
            }
         ],
         "flow"
      ],
      "plugins": ["add-module-exports", "array-includes"],
      "env": {
         "build": {
            "plugins": ["transform-regenerator"]
         },
         "test": {
            "presets": ["power-assert"],
            "plugins": ["istanbul", "rewire"]
         }
      }
   },
   "nyc": {
      "require": ["babel-register"],
      "include": ["src"],
      "sourceMap": false,
      "instrument": false
   },
   "scripts": {
      "flow": "flow",
      "nycha": "cross-env NODE_ENV=test nyc mocha",
      "test": "run-s flow nycha",
      "coverage": "nyc report --reporter=text-lcov | coveralls",
      "build": "cross-env NODE_ENV=build babel ./src -d ./lib",
      "flowcopy": "flow-copy-source ./src ./lib",
      "postbuild": "run-s flowcopy format",
      "format": "prettier --write **/*.js package.json",
      "typed": "flow-typed",
      "node": "node --require babel-register"
   },
   "devDependencies": {
      "babel-cli": "^6.26.0",
      "babel-plugin-add-module-exports": "^0.2.1",
      "babel-plugin-array-includes": "^2.0.3",
      "babel-plugin-istanbul": "^4.1.4",
      "babel-plugin-rewire": "^1.1.0",
      "babel-plugin-transform-regenerator": "^6.26.0",
      "babel-preset-env": "^1.6.0",
      "babel-preset-flow": "^6.23.0",
      "babel-preset-power-assert": "^1.0.0",
      "babel-register": "^6.26.0",
      "coveralls": "^2.13.1",
      "cross-env": "^5.0.5",
      "flow-bin": "^0.54.0",
      "flow-copy-source": "^1.2.1",
      "flow-typed": "^2.1.5",
      "mocha": "^3.5.0",
      "npm-run-all": "^4.1.1",
      "nyc": "^11.1.0",
      "power-assert": "^1.4.4",
      "prettier": "^1.6.1",
      "rewire": "^2.5.2"
   },
   "dependencies": {
      "fs-extra": "^4.0.2",
      "jszip": "^3.1.4",
      "recursive-readdir": "^2.2.1",
      "regenerator-runtime": "^0.11.0",
      "yargs": "^9.0.1"
   }
}
